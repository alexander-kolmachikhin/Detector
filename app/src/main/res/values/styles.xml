<resources>

    <style name="FAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:stateListAnimator">@animator/on_click</item>
        <item name="srcCompat">@drawable/ic_add</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="borderWidth">0dp</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_margin">@dimen/big_margin</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
